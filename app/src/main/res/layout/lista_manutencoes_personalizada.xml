<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:fadingEdgeLength="@dimen/activity_horizontal_margin"
    android:isScrollContainer="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/lista_favoritos_personalizada_imagem"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:src="@mipmap/ico_perfil" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lista_favoritos_personalizada_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Titulo"
            android:textColor="@color/Cinza"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/lista_favoritos_personalizada_descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="descriÃ§ao"
            android:textColor="@color/Cinza"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>